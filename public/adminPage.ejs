                <th scope="col">ID категории</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
            <tr>
                <td class="TDid" scope="row"><%= product.name %></td>
                <td class="TDname"><%= product.price.toFixed(2) %></td>
                <td><%= product.Category.name %></td>
