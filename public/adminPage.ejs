                <td class="TDid"><%= product.Supplier.name %></td>
                <td class="TDid"><%= product.Supplier.name %></td>
                <td class="TDbtn">
                    <form action="/delete-product/<%= product.id %>" method="POST" style="display:inline;">
                        <button class="button" type="submit">
                            <span>удалить запись</span>
                        </button>
                    </form>
                    <button  class="button btnGreen" onclick="location.href='/edit-product/<%= product.id %>'">
                        <span>изменить запись</span>
                    </button>
                </td>
